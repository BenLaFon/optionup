<nav class="flex justify-between mx-16 my-8 py-4 align-text-bottom">
  <div class="text-2xl font-bold" > <%= @company.ticker %></div>
  <div class="text-2xl font-bold" > <%= @company.name %></div>
  <%= link_to 'Edit this company', edit_company_path(@company), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
